{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Tauri Backend Debug",
      "cargo": {
        "args": [
          "build",
          "--manifest-path=${workspaceFolder}/apps/desktop/src-tauri/Cargo.toml",
          "--no-default-features"
        ]
      },
      "task": "ui:dev",
      "args": [],
      "cwd": "${workspaceFolder}/apps/desktop/src-tauri",
      "preLaunchTask": "ui:dev"
    },
    {
      "type": "pwa-chrome",
      "request": "launch",
      "name": "Tauri Frontend Debug",
      "url": "http://localhost:1420",
      "webRoot": "${workspaceFolder}/apps/desktop/src",
      "sourceMapPathOverrides": {
        "webpack:///./src/*": "${webRoot}/*"
      }
    }
  ],
  "compounds": [
    {
      "name": "Tauri Full Stack",
      "configurations": ["Tauri Backend Debug", "Tauri Frontend Debug"]
    }
  ]
}
