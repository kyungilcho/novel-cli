{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ui:dev",
      "type": "shell",
      "command": "pnpm dev",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/apps/desktop"
      },
      "problemMatcher": [
        {
          "owner": "custom",
          "pattern": {
            "regexp": "^$"
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "VITE v.* ready in",
            "endsPattern": "built in"
          }
        }
      ]
    },
    {
      "label": "tauri:build",
      "type": "shell",
      "command": "cargo build",
      "options": {
        "cwd": "${workspaceFolder}/apps/desktop/src-tauri"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
